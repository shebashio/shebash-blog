{{!< default}}

{{#post}}

<main class='o-wrapper'>
  <article>
    {{> post-hero }}

    <div class='o-grid'>
      <div class='o-grid__col o-grid__col--center o-grid__col--4-4-s'>
        <div class='c-{{ post_class }}'>
          <div class='c-content'>
            {{ content }}
          </div>

          {{#if access}}
            {{#if tags}}
              <div class='c-tags'>
                {{ tags separator='' }}
              </div>
            {{/if}}
          {{/if}}

          {{!-- If the post is published for members and paid members and the visitor is not one of those, show the upgrade box --}}
          {{#unless @member}}
            {{#if access}}
              <div class='c-subscribe'>
                <div class='o-grid'>
                  <div class='o-grid__col o-grid__col o-grid__col--3-4-m o-grid__col--3-4-l o-grid__col--center'>
                    <div data-icon='ei-envelope' data-size='m' class='c-subscribe__icon'></div>
                    <h3 class='u-type-sm u-mb-24 u-type-500 u-color-gray'>{{t 'Join the newsletter to receive the latest updates in your inbox.' }}</h3>
                    {{> subscribe-form inputLabel='subscribe-email-post'}}
                  </div>
                </div>
              </div>
            {{/if}}
          {{/unless}}

          {{#if access}}
            {{> disqus}}
          {{/if}}

          {{!-- If the post is published for subscribers and paid members but the user is not one of those, show the upgrade box  --}}
          {{#unless access}}
            {{> post-upgrade-cta }}
          {{/unless}}
        </div>
      </div>
    </article>
  </div>
</main>

{{/post}}

{{> related-posts}}